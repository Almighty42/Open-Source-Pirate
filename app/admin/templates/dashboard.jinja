{% extends "/base.jinja" %}
{% block content %}
    <a href="/new">Add new</a>
    <div class="articles">
        {% for article in articles %}
            <div class="article">
                <h2>{{ article.title }}</h2>
                <p>{{ article.created_at }}</p>
                <a href="/article/{{ article.id }}">View more</a>
                <a href="/edit/{{ article.id }}">Edit</a>
                <form action="/delete/{{ article.id }}"
                      method="post"
                      style="display:inline">
                    <button type="submit"
                            onclick="return confirm('Are you sure you want to delete this article?');">Delete</button>
                </form>
            </div>
        {% endfor %}
    </div>
{% endblock %}
