{% extends "./base.jinja" %}
{% block content %}
    <h1>Edit article - {{ form.title.data }}</h1>
    <form action="" method="put" novalidate>
        {{ form.hidden_tag() }}
        <p>
            {{ form.title.label }}
            <br>
            {{ form.title(size=32) }}
            <br>
            {% for error in form.title.errors %}<span style="color: red;">[{{ error }}]</span>{% endfor %}
        </p>
        <p>
            {{ form.pub_date.label }}
            <br>
            {{ form.pub_date(size=32, disabled=True) }}
            <br>
            {% for error in form.pub_date.errors %}<span style="color: red;">[{{ error }}]</span>{% endfor %}
        </p>
        <p>
            {{ form.content.label }}
            <br>
            {{ form.content(size=48, style="height: 64px;") }}
            <br>
            {% for error in form.content.errors %}<span style="color: red;">[{{ error }}]</span>{% endfor %}
        </p>
        <p>{{ form.submit() }}</p>
    </form>
{% endblock %}
