{% extends "./base.jinja" %}
{% block content %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow">
                    <div class="card-body p-4">
                        <h1 class="h3 mb-4 text-center">Admin Login</h1>
                        <form action="" method="post" novalidate>
                            {{ form.hidden_tag() }}
                            <div class="mb-3">
                                {{ form.password.label(class="form-label") }}
                                {{ form.password(size=32, class="form-control") }}
                                {% for error in form.password.errors %}<div class="invalid-feedback d-block">{{ error }}</div>{% endfor %}
                            </div>
                            <div class="d-grid">{{ form.submit(class="btn btn-primary btn-lg") }}</div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
